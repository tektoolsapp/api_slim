{% extends 'layout/content//main-signin.twig' %}

{% block login %}

    <div style="display: block;
         margin:50px auto;
         width: 30%;">

        <div class="w3-container" style="width:400px;">

            <div class="w3-center">
                <img src="assets/ready_resources_logo_74.png" width="74">
            </div>

            <div class="w3-center"><h4>Ready Resources Mobilisation App <br>Login</h4></div>

            {% include 'layout/partials/status.twig' %}

            <form action="{{ url_for('user-signin')}}" method="post">

                {{ csrf() | raw }}

                <div class="w3-row">
                    <div style="padding:10px 10px 10px 0;">
                        <label style="font-weight:bold;">Username<span class="required-label">*</span></label>
                        <input name="username" id="username" class="w3-input w3-border input-display{{ errors.username ? ' required' : ''}}" type="text">
                            {% if errors.username %}
                                <div class="error">{{ errors.username | first }}</div>
                            {% endif %}
                    </div>
                </div>

                <div class="w3-row">
                    <div style="padding:10px 10px 10px 0;">
                        <label style="font-weight:bold;">Password</label><span class="required-label">*</span></label>
                        <input name="password" id="password" class="w3-input w3-border input-display {{ errors.password ? ' required' : ''}}" type="password">
                        {% if errors.password %}
                            <div class="error">{{ errors.password | first }}</div>
                        {% endif %}
                    </div>
                </div>

                <div class="w3-section">

                    <button class="w3-button w3-darkblue" style="margin-right:15px;">Login</button>

                    <input id="persist" name="persist" class="w3-check" type="checkbox" checked="checked"> Remember me

                </div>

                <input type="hidden" name="redirect" value="{{ redirect }}">

            </form>

            <div class="w3-light-grey">
                <span class="w3-right w3-padding w3-hide-small">Forgot <a href="tryit.asp-filename=tryw3css_examples_modal_login.html#">password?</a></span>
            </div>

        </div>
    </div>

{% endblock %}

